<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFitnessApp.Pages.DistancePage"
             xmlns:viewmodel="clr-namespace:MyFitnessApp.ViewModels"
             x:DataType="viewmodel:DistanceViewModel"
             Title="">
    
    <ScrollView>
        <VerticalStackLayout Padding="30,20"
                             Spacing="25">

            <Label Text="{Binding Distance}"
                   FontSize="30"
                   SemanticProperties.Description="The total distance traveled."/>

            <Button Text="Start Listening"
                    SemanticProperties.Hint="start to listen for change in location"
                    Command="{Binding StartCommand}"/>

            <Button Text="Stop Listening" 
                    SemanticProperties.Hint="stop listening for changes in location"
                    Command="{Binding StopCommand}"/>

        </VerticalStackLayout>
    </ScrollView>
   
</ContentPage>