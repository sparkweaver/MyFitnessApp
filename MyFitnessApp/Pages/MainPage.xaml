<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFitnessApp.Pages.MainPage"
             xmlns:viewmodel="clr-namespace:MyFitnessApp.ViewModels"
             x:DataType="viewmodel:MainViewModel"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="30,20"
                             Spacing="25">
            
            <Image Source="myfitness.png"
                   HeightRequest="300"
                   Aspect="AspectFit"
                   SemanticProperties.Description="running human with a dumbell" />

            <Label Text="MyFitness"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1" />

            <Button Text="Walking"
                    SemanticProperties.Hint="Navigate to the walking page"
                    Command="{Binding NavigateCommand}"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
