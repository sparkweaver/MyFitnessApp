<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFitnessApp.Pages.MainPage"
             xmlns:viewmodel="clr-namespace:MyFitnessApp.ViewModels"
             x:DataType="viewmodel:MainViewModel"
             Title="">


    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="10">

        <Grid WidthRequest="300">
            <Image Source="myfitness.png"
                   HorizontalOptions="Fill"
                   Aspect="AspectFit"
                   SemanticProperties.Description="running human with a dumbell"/>
        </Grid>

        <Label Text="MyFitness"
               Style="{StaticResource Headline}"
               SemanticProperties.HeadingLevel="Level1"/>

        <Button Text="Walking"
                SemanticProperties.Hint="Navigate to the walking page"
                Command="{Binding NavigateCommand}"/>

    </VerticalStackLayout>

</ContentPage>
